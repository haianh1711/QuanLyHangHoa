<Window x:Class="GUI.Views.DangNhapForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.Views"
        mc:Ignorable="d"
        Title="DangNhapForm" Height="616" Width="546.4"
        Background="Transparent" 
          WindowStyle="None"
          ResizeMode="NoResize"
          WindowStartupLocation="CenterScreen"
          AllowsTransparency="True"
          MouseDown="Window_MouseDown">

    <Border CornerRadius="40"
     Background="#161F36"
     BorderBrush="Transparent"
     BorderThickness="1">
        <Grid>
            <!-- Thoát -->
            <Button 
BorderBrush="Transparent"
FontFamily="Segoe MDL2 Assets" 
Content="&#xE7E8;" 
FontSize="26" 
Foreground="#FFF" 
Background="Transparent"
HorizontalAlignment="Right" 
VerticalAlignment="Top" 
Margin="19,19,20,0" Click="Button_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <!-- Tắt mọi trạng thái mặc định -->
                        <Setter Property="OverridesDefaultStyle" Value="True" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>



            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="353" Orientation="Vertical">
                <!-- Avatar -->
                <Grid>
                    <Image Source="/Images/ImgLogin.png" Width="350" Height="150"/>
                </Grid>
                <!-- Tên đăng nhập -->
                <Grid>
                    <Border Background="#2A2A45" CornerRadius="20" Padding="5">
                        <TextBox x:Name="txtUser"
                              Width="351" Height="43"
                              HorizontalAlignment="Left"
                              Foreground="White"
                              Background="Transparent"
                              BorderBrush="DarkGray"
                              FontSize="20"
                              VerticalContentAlignment="Center"
                              TextAlignment="Left" 
                              CaretBrush="LightGray"
                              BorderThickness="0,0,0,0"
                              Padding="50,0,0,0"
                              FocusVisualStyle="{x:Null}" TextChanged="txtUser_TextChanged" Text="&#x9;&#x9;" />
                    </Border>
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                            Text="&#xE77B;"
                            Height="40"
                            Foreground="White"
                            Padding="10,0,0,0"
                            FontSize="38" Margin="0,6,306,7" />
                </Grid>

                <!-- Mật khẩu -->
                <Border Background="#2A2A45" CornerRadius="20" Padding="5" Margin="0,20,0,0" Height="55">
                    <Grid>
                        <PasswordBox x:Name="txtPass"
                              Width="351" Height="43"
                              HorizontalAlignment="Center"
                              Foreground="White"
                              Background="Transparent"
                              BorderBrush="DarkGray"
                              BorderThickness="0,0,0,0"
                              FontSize="20"
                              VerticalContentAlignment="Center"
                              Padding="50,0,0,0"
                              PasswordChanged="txtPass_PasswordChanged"/>
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                            Text="&#xE72E;"
                            Height="38"
                            Foreground="White"
                            Padding="5,0,0,0"
                            FontSize="38" Margin="0,6,306,7" />
                    </Grid>
                </Border>

                <!-- Nút đăng nhập -->
                <Button  Width="351"
                  Height="43"
                  FontSize="20"
                  FontWeight="Bold"
                  Click="Btn_Login"
                  Margin="0,20,0,0" 
                  Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button" >
                            <Setter  Property="Background" Value="#5B71A8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF6C96FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate>
                            <Border    Width="351"
                                Height="43"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                           Content="Đăng nhập"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
            <!-- Nhãn sử dụng email -->
            <TextBlock Text="Sử dụng email của bạn?"
            MouseDown="TextBlock_MouseDown"
            Foreground="Gray"
            FontSize="15"
            TextWrapping="Wrap"
            Height="30"
            Margin="188,517,188,0"
            VerticalAlignment="Top"
            Width="168" TextDecorations="Underline" />
        </Grid>
    </Border>

</Window>

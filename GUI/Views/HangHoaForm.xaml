<UserControl x:Class="GUI.Views.HangHoaForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views"
             xmlns:viewModels="clr-namespace:GUI.ViewModels"
             mc:Ignorable="d" 
             Height="665" Width="678">
    <UserControl.DataContext>
        <viewModels:HangHoaViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Nút tìm kiếm -->
        <Grid Margin="0, 0, 0, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Tag="Nhập mã phiếu nhập..." 
             Style="{StaticResource SearchTextBox}"
             Text="{Binding MaTimKiem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Grid.Column="1" Style="{StaticResource SearchButton}" Command="{Binding TimKiemCommand}"/>
        </Grid>

        <!-- Bảng chứa thông tin khách-->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Data}" 
                  Style="{StaticResource DataGridStyle}" 
                  Margin="0, 0, 0, 10"
                  SelectedItem="{Binding SpDuocChon, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã sản phẩm" Binding="{Binding MaSanPham}" Width="*"  />
                <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding TenSanPham}"  Width="*" />
                <DataGridTextColumn Header="Số lượng tồn" Binding="{Binding SoLuong}" Width="*" />
                <DataGridTextColumn Header="Mô tả" Binding="{Binding MoTa}"  Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!--Ô nhập dữ liệu-->
        <Border Grid.Row="2"    
                Style="{StaticResource SimpleBorderStyle}" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <!--Chỗ nhập thông tin-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    
                    <!--TextBox hàng đầu-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Style="{StaticResource SimpleLabelStyle}" Content="Mã sản phẩm" />
                        <TextBox Grid.Row="1" Style="{StaticResource SimpleTextBoxStyle}" Text="{Binding SanPhamID, Mode=TwoWay}"/>
                    </Grid>

                    <!--TextBox hàng hai-->    
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Style="{StaticResource SimpleLabelStyle}" Content="Tên sản phẩm" />
                        <TextBox Grid.Row="1" Style="{StaticResource SimpleTextBoxStyle}" Text="{Binding TenSanPham, Mode=TwoWay}"/>

                        <Label Grid.Column="2" Style="{StaticResource SimpleLabelStyle}" Content="Số lượng tồn" />
                        <TextBox Grid.Row="1" Grid.Column="2" Style="{StaticResource SimpleTextBoxStyle}" Text="{Binding SoLuong, Mode=TwoWay}"/>

                    </Grid>

                    <!--TextBox hàng ba-->
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Label Style="{StaticResource SimpleLabelStyle}" Content="Mô tả" />
                        <TextBox Grid.Row="1" 
                                 Style="{StaticResource MultilineTextBoxStyle}" 
                                 Text="{Binding MoTa, Mode=TwoWay}" />
                    </Grid>

                </Grid>

                <!--Hình ảnh và button-->
                <Grid Grid.Column="2" HorizontalAlignment="Right">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Image  Style="{StaticResource ImageDefault}"/>
                    
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Button Content="Thêm" Style="{StaticResource SimpleRoundedButton}"/>
                        <Button Content="Sửa" Style="{StaticResource SimpleRoundedButton}"/>
                        <Button Content="Xóa" Style="{StaticResource SimpleRoundedButton}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>

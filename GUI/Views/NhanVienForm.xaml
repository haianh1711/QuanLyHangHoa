<UserControl x:Class="GUI.Views.NhanVienForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:FormNhap="clr-namespace:GUI.Views.UserControls"
             xmlns:viewModels="clr-namespace:GUI.ViewModels"
             xmlns:local="clr-namespace:GUI.Views"
             mc:Ignorable="d" 
             Height="655.25" 
             Width="678">
    <UserControl.DataContext>
        <viewModels:NhanvienViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="229.567"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Nút tìm kiếm -->
        <ContentControl Grid.Row="0"
                    Margin="0,0,0,10"
                    Style="{StaticResource SearchTextBox}"
                    Tag="Nhập mã hoặc tên nhân viên..."></ContentControl>

        <!-- Bảng chứa thông tin khách-->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Data}" 
              Style="{StaticResource DataGridStyle}"
                Margin="0, 0, 0, 5">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã nhân viên" Binding="{Binding MaNhanVien}" Width="*"  />
                <DataGridTextColumn Header="Tên nhân viên" Binding="{Binding TenNhanVien}"  Width="*" />
                <DataGridTextColumn Header="Ngày bắt đầu" Binding="{Binding NgayBatDau}"  Width="*" />
                <DataGridTextColumn Header="Chức vụ" Binding="{Binding ChucVu}"  Width="*" />
                <DataGridTextColumn Header="Hình ảnh" Binding="{Binding HinhAnh}"  Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Width="678" Background="#A7BFFC" Margin="0,20,0,0"
              CornerRadius="14">

            <FormNhap:ChiTietnv />
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="GUI.Views.UserControls.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="655.25" d:DesignWidth="325">
    <UserControl.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="HoverButtonStyle" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6279B1"/>
                    <Setter Property="Foreground" Value="Black" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    <Border Background="#0F1524" BorderBrush="Transparent" CornerRadius="40">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0*"/>
                <RowDefinition Height="197*"/>
                <RowDefinition Height="38*"/>
                <RowDefinition Height="375*"/>
                <RowDefinition Height="45*"/>
            </Grid.RowDefinitions>

            <!--btnQuayLai-->
            <Button Grid.Row="4"
                    Content="Quay lại"
                    FontSize="25"
                    Foreground="#AAA7A7"
                    Background="Transparent"
                    Style="{StaticResource RoundedButtonStyle}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="OnQuayLaiClick" Height="33" Width="90" />
            <!--btnThoat-->
            <Button 
                BorderBrush="Transparent"
                FontFamily="Segoe MDL2 Assets" 
                Content="&#xE7E8;" 
                FontSize="26" 
                Foreground="#FFF" 
                Background="Transparent"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="19,19,0,0" Click="Button_Click" Height="26" Width="26" Grid.RowSpan="2">

                <!--btnPower-->
                <Button.Style>
                    <Style TargetType="Button">
                        <!-- Tắt mọi trạng thái mặc định -->
                        <Setter Property="OverridesDefaultStyle" Value="True" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!--Nền logo-->
            <Image HorizontalAlignment="Center" Height="170" VerticalAlignment="Top" Width="170" Source="/Views/UserControls/Ảnh.png" Margin="0,25,0,0" Grid.RowSpan="2"/>

            <!--Tên TaiKhoan-->
            <Label Grid.Row="2"
               Content="Xin chào, Trần Ngọc Bảo Trân."
                   Foreground="White"
                   FontSize="13"
                   Margin="18,3,10,3"/>

            <!--Img TaiKhoan-->
            <Border Grid.Row="0"
                Width="110" 
                Height="110" 
                Background="#FF8D8D8D" 
                CornerRadius="100" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" Margin="0,55,0,0" Grid.RowSpan="2">
                <Image Source="/Views/UserControls/z5961169577287_1539da1c7583455dbe33a28158bc9f9c.jpg"
                       Width="110"
                       Height="110" Stretch="UniformToFill">
                    <Image.Clip>
                        <EllipseGeometry Center="55,55" RadiusX="55" RadiusY="55" />
                    </Image.Clip>
                </Image>
            </Border>

            <!--Menu chuc nang-->
            <StackPanel Grid.Row="3" Background="Transparent" Margin="0,20,0,0">
                <!-- Quản lý hàng hóa -->
                <Expander Header=" Quản lý hàng hóa" Foreground="White" Background="Transparent" FontSize="18" Margin="9,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Quản lý danh sách hàng hóa" Padding="30,15,10,10" FontSize="16" Foreground="#AAAAFF" Cursor="Hand" />
                        <TextBlock Text="Giao dịch nhập xuất" Padding="30,10,10,10" FontSize="16" Foreground="#AAAAFF" Cursor="Hand" />
                    </StackPanel>
                </Expander>

                <!-- Quản lý nhân viên -->
                <Button Content="Quản lý nhân viên" Margin="0,16,0,0" Foreground="White" Background="Transparent" FontSize="18" Padding="38,10,10,10" BorderBrush="Transparent" HorizontalContentAlignment="Left" Width="305" Style="{StaticResource HoverButtonStyle}"  />

                <!-- Quản lý khách hàng -->
                <Button Content="Quản lý khách hàng"  Margin="0,16,0,0" Foreground="White" Background="Transparent" FontSize="18" Padding="38,10,10,10" BorderBrush="Transparent" HorizontalContentAlignment="Left" Width="305" Style="{StaticResource HoverButtonStyle}"/>

                <!-- Thống kê -->
                <Button Content="Thống kê" Margin="0,16,0,0" Foreground="White" Background="Transparent" FontSize="18" Padding="38,10,10,10" BorderBrush="Transparent" HorizontalContentAlignment="Left" Width="305" Style="{StaticResource HoverButtonStyle}" />
            </StackPanel>




        </Grid>
    </Border>
</UserControl>

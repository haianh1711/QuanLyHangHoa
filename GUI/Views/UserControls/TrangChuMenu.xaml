<UserControl x:Class="GUI.Views.UserControls.TrangChuMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views.UserControls"
             mc:Ignorable="d" 
            d:DesignHeight="655.25" d:DesignWidth="325">



    <Border Background="#0A0E18" CornerRadius="15,0,0,15" BorderBrush="Transparent">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="310*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="258"/>
                <RowDefinition Height="317.838"/>
                <RowDefinition Height="179.412"/>
            </Grid.RowDefinitions>

            <!--power-->
            <Button 
                 BorderBrush="Transparent"
                 FontFamily="Segoe MDL2 Assets" 
                 Content="&#xE7E8;" 
                 FontSize="26" 
                 Foreground="#FFF" 
                 Background="Transparent"
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Top" 
                 Margin="19,19,0,0" Click="Button_Click" Height="26" Width="26">

                <!--btnPower-->
                <Button.Style>
                    <Style TargetType="Button">
                        <!-- Tắt mọi trạng thái mặc định -->
                        <Setter Property="OverridesDefaultStyle" Value="True" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                     BorderBrush="{TemplateBinding BorderBrush}"
                     BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!--logo-->
            <Image 
             x:Name="Ustock"
             Grid.Row="0"
             Source="/Views/UserControls/ustock-removebg-preview.png"
             Margin="72,54,72,53" Width="150" Height="150" />

            <!--Menu chuc nang-->
            <StackPanel Background="Transparent" Margin="0,3,0,112" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="1" Cursor="Hand"> 
                <!-- Quản lý hàng hóa -->
                <Expander Header=" Quản lý hàng hóa" Foreground="White" Background="Transparent" FontSize="18" Margin="9,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Quản lý danh sách hàng hóa" Padding="30,15,10,10" FontSize="16" Foreground="#AAAAFF" Cursor="Hand" />
                        <TextBlock Text="Giao dịch nhập xuất" Padding="30,10,10,10" FontSize="16" Foreground="#AAAAFF" Cursor="Hand" />
                    </StackPanel>
                </Expander>

                <!-- Quản lý nhân viên -->
                <Button Content="Quản lý nhân viên" Margin="0,16,0,0" Foreground="White" Background="Transparent" FontSize="18" Padding="39,10,10,10" BorderBrush="Transparent" HorizontalContentAlignment="Left" Width="317"   />

                <!-- Quản lý khách hàng -->
                <Button Content="Quản lý khách hàng"  Margin="0,16,0,0" Foreground="White" Background="Transparent" FontSize="18" Padding="39,10,10,10" BorderBrush="Transparent" HorizontalContentAlignment="Left" Width="317" />

                <!-- Thống kê -->
                <Button Content="Thống kê" Margin="0,16,0,0" Foreground="White" Background="Transparent" FontSize="18" Padding="39,10,10,10" BorderBrush="Transparent" HorizontalContentAlignment="Left" Width="317"  />
            </StackPanel>

            <!--BtnDangXuat-->
            <Button Grid.Row="2" Background="#485A88" BorderBrush="Transparent" BorderThickness="1"
                     Content="ĐĂNG XUẤT"
                     Foreground="Gray"
                     FontSize="20" Margin="26,22,18,115">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>
    </Border>
</UserControl>

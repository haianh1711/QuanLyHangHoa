<UserControl x:Class="GUI.Views.UserControls.TrangChuHienThiTKForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views.UserControls"
             mc:Ignorable="d" 
                     d:DesignHeight="655.25" d:DesignWidth="678">
    <Border Background="Black" CornerRadius="0,15,15,0" BorderBrush="Transparent">

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="584"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="194*"/>
                    <ColumnDefinition Width="149*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                Grid.Column="0"
                 Text="Xin chào!" 
                 Margin="40,158,170,378" 
                 FontSize="35"
                 FontFamily="Lato Black" Height="48" Width="173">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0,0" StartPoint="1,1">
                            <GradientStop Color="#FF1849C0"/>
                            <GradientStop Color="#FFF434F1" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <Label 
                Grid.Column="0"
                 Content="Trần Ngọc Bảo Trân" 
                 VerticalContentAlignment="Center" 
                 Margin="38,199,12,327" 
                 FontSize="35"
                 FontFamily="Lato Black" Height="58">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0,0" StartPoint="1,1">
                            <GradientStop Color="#FF1849C0"/>
                            <GradientStop Color="#FFF434F1" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </Label>

                <!--line-->
                <Border Grid.Column="0"
                         Background="White"
                      Margin="44,260,291,323" Height="1" Grid.ColumnSpan="2"/>

                <Label Grid.Column="0" Content="Mã Nhân viên: TD00537" FontSize="20" Foreground="White" VerticalContentAlignment="Center" Margin="38,283,22,267"/>
                <Label Grid.Column="0" Content="Chức vụ: Admin " FontSize="20" Foreground="White" VerticalContentAlignment="Center" Margin="37,323,22,227"/>
                <Label Grid.Column="0" Content="Năm sinh: 01/12/2007 " FontSize="20" Foreground="White" VerticalContentAlignment="Center" Margin="37,363,22,187"/>
                <Label Grid.Column="0" Content="Gmail: trantnbtd00537@gmail.com " FontSize="20" Foreground="White" VerticalContentAlignment="Center" Margin="36,403,21,147"/>

                <!--ảnh-->
                <Rectangle Width="250" 
                           Height="350" 
                           Cursor="Hand"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Top" 
                           Margin="0,80,0,0" 
                           Grid.Column="1">
                    <Rectangle.Clip>
                        <PathGeometry>
                            <PathGeometry.Figures>
                                <PathFigure StartPoint="0,120">
                                    <PathFigure.Segments>
                                        <!-- Góc trên trái -->
                                        <ArcSegment Point="120,0" Size="120,120" SweepDirection="Clockwise"/>
                                        <!-- Đường thẳng trên -->
                                        <LineSegment Point="117.65,0"/>
                                        <!-- Góc trên phải -->
                                        <ArcSegment Point="250,120" Size="120,120" SweepDirection="Clockwise"/>
                                        <!-- Các cạnh còn lại -->
                                        <LineSegment Point="250,350"/>
                                        <LineSegment Point="0,350"/>
                                        <LineSegment Point="0,120"/>
                                    </PathFigure.Segments>
                                </PathFigure>
                            </PathGeometry.Figures>
                        </PathGeometry>
                    </Rectangle.Clip>
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/Views/UserControls/BTran.jpg" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                </Rectangle>


                <!--Btn-->
                <Button Grid.Column="1" Background="#7A8A8FAB" Cursor="Hand" BorderBrush="Transparent" 
                         Content="Đổi mật khẩu"
                         Foreground="White"
                         FontSize="16" Margin="23,436,20,113">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Grid.Column="1" Background="#7A8A8FAB" Cursor="Hand" BorderBrush="Transparent" 
                    Content="Đổi ảnh"
                    Foreground="White"
                    FontSize="16" Margin="23,476,20,73">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Grid.Column="1" Background="#7A8A8FAB" Cursor="Hand" BorderBrush="Transparent" 
                    Content="Hướng dẫn"
                    Foreground="White"
                    FontSize="16" Margin="23,516,20,33">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


            </Grid>

            <Label
                 Grid.Row="1"
                Content="Chúng ta đã bên nhau 100 ngày."
               HorizontalAlignment="Center" VerticalContentAlignment="Center" 
            HorizontalContentAlignment="Center"
               Width="302"
                Foreground="White" 
            FontSize="18" Height="52"/>
        </Grid>
    </Border>
</UserControl>

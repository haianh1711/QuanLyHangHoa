<UserControl x:Class="GUI.Views.PhieuNhapForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:diag="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Views"
             xmlns:viewModels="clr-namespace:GUI.ViewModels"
             mc:Ignorable="d" 
             Height="665" Width="678">
    <UserControl.DataContext>
        <viewModels:PhieuNhapViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>

        <!-- Nút tìm kiếm -->
        <ContentControl Grid.Row="0"
                        Margin="0,0,0,10"
                        Style="{StaticResource SearchTextBox}"
                        Tag="Nhập mã hoặc tên hàng hóa..."></ContentControl>

        <!--Nhập thông tin-->
        <Border Grid.Row="1" 
                Style="{StaticResource SimpleBorderStyle}" 
                Margin="0,0,0,10" >
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.6*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--Tổng tiền và nút lưu phiếu, xóa-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0, 0, 20, 0">
                        <Label Style="{StaticResource SimpleLabelStyle}" Content="Tổng tiền" />
                        <TextBox x:Name="txtTongTien" Style="{StaticResource SimpleTextBoxStyle}" 
                                 IsReadOnly="True"
                                 Text="{Binding PhieuNhap.TongTien, Mode=OneWay}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Button Content="Lưu phiếu" 
                                Style="{StaticResource SimpleRoundedButton}"
                                Command="{Binding LuuPhieuCommand}"/>
                        <Button Content="Xóa" 
                                Style="{StaticResource SimpleRoundedButton}"
                                Command="{Binding XoaPhieuCommand}"
                                />
                    </StackPanel>
                </Grid>

                <!--Thêm sp vào phiếu-->
                <ContentControl Grid.Row="1" Tag="Thêm sản phẩm vào phiếu"
                        Style="{StaticResource BorderWithHeaderStyle}" 
                        Background="#CAD9FF">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <!--Nhập thông tin-->
                        <Grid Margin="0, 0, 30, 0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>


                            <StackPanel >
                                <Label Style="{StaticResource SimpleLabelStyle}"  Content="Mã sản phẩm" />
                                <ComboBox x:Name="cbMaSP"
                                          ItemsSource="{Binding SanPhams}"
                                          DisplayMemberPath="MaSanPham"
                                          SelectedValuePath="MaSanPham"
                                          SelectedValue="{Binding SelectedChiTiet.MaSanPham, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SelectedItem="{Binding SelectedSanPham, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource SimpleComboBoxStyle}">
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <Label Style="{StaticResource SimpleLabelStyle}" Content="Tên sản phẩm" />
                                <TextBox x:Name="txtTenSP" 
                                         Style="{StaticResource SimpleTextBoxStyle}"
                                         IsReadOnly="True"
                                         Text="{Binding SelectedChiTiet.TenSanPham, Mode=OneWay}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1">
                                <Label Style="{StaticResource SimpleLabelStyle}" Content="Số lượng nhập" />
                                <TextBox x:Name="txtSoLuong" Style="{StaticResource SimpleTextBoxStyle}" 
                                         Text="{Binding SelectedChiTiet.SoLuongNhap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            

                            <StackPanel Grid.Column="2" Grid.Row="1">
                                <Label Style="{StaticResource SimpleLabelStyle}" Content="Giá nhập" />
                                <TextBox x:Name="txtGiaNhap" Grid.Row="1" 
                                      Style="{StaticResource SimpleTextBoxStyle}" 
                                      Text="{Binding SelectedChiTiet.GiaNhap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                        </Grid>

                        <!--Các nút-->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <Button Content="Thêm" 
                                    Margin="0, 0, 0, 5"
                                    Style="{StaticResource SimpleButton}" 
                                    Command="{Binding ThemChiTietCommand}"/>
                            <Button Content="Sửa" Style="{StaticResource SimpleButton}" Margin="0, 0, 0, 5"/>
                            <Button Content="Xóa" Style="{StaticResource SimpleButton}"/>
                        </StackPanel>

                    </Grid>
                </ContentControl>


            </Grid>
        </Border>


        <!--Bảng-->
        <DataGrid x:Name="dgChiTietPN" Grid.Row="2" 
                  
                  ItemsSource="{Binding ChiTietPhieuNhaps}" 
                  SelectedItem="{Binding SelectedChiTiet}"
                  Style="{StaticResource DataGridStyle}" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã sản phẩm" Binding="{Binding MaSanPham}" Width="*"  />
                <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding TenSanPham}"  Width="*" />
                <DataGridTextColumn Header="Giá nhập" Binding="{Binding GiaNhap}"  Width="*" />
                <DataGridTextColumn Header="Số lượng nhập" Binding="{Binding SoLuongNhap}" Width="*" />
                <DataGridTextColumn Header="Thành tiền" Binding="{Binding ThanhTien}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>

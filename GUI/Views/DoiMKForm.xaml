<Window x:Class="GUI.Views.DoiMKForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.Views"
        mc:Ignorable="d"
        Title="DoiMKForm" Height="755.25" Width="1002.7"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="15"
            BorderBrush="Transparent">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF1C77E6"/>
                <GradientStop Color="#FFA521BD" Offset="0.8"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>

            <Grid>
               
                <TextBlock FontFamily="Segoe MDL2 Assets"
                     Text="&#xE72B;"
                     Height="40"
                     Foreground="White"
                     FontSize="30"
                     Margin="20,25,0,0"
                     VerticalAlignment="Top"
                     />
                <Button Width="147"
              Height="60"
              FontSize="20"
              FontWeight="Bold"
              MouseDown="Btn_back"
              Margin="0,10,0,0" 
              Foreground="White" 
               VerticalAlignment="Top"
               HorizontalAlignment="Left" Click="Btn_back">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" >
                            <Setter  Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate>
                            <Border   Width="200"
                            Height="60"
                            CornerRadius="10"
                            Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                       Content="Quay lại"
                                       HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="450" Width="400">
                <Label Content="ĐỔI MẬT KHẨU"
                 HorizontalAlignment="Center"
                 Foreground="White"
                 FontSize="30"
                 FontWeight="Bold"
                 Margin="0,0,0,50"/>
                <Border Background="#D8D9D9D9" CornerRadius="10" Padding="5" Margin="0,0,0,30">
                    <TextBox x:Name="txtMKCu"
                               Width="395" Height="50"
                               HorizontalAlignment="Left"
                               Foreground="White"
                               Background="Transparent"
                               BorderBrush="DarkGray"
                               FontSize="20"
                               VerticalContentAlignment="Center"
                               TextAlignment="Left" 
                               CaretBrush="LightGray"
                               BorderThickness="0,0,0,0"
                               TextChanged="txtMKCu_TextChanged" 
                               />
                </Border>

                <Border Background="#D8D9D9D9" CornerRadius="10" Padding="5" Margin="0,0,0,30">
                    <TextBox x:Name="txtMKmoi"
                               Width="395" Height="50"
                               HorizontalAlignment="Left"
                               Foreground="White"
                               Background="Transparent"
                               BorderBrush="DarkGray"
                               FontSize="20"
                               VerticalContentAlignment="Center"
                               TextAlignment="Left" 
                               CaretBrush="LightGray"
                               BorderThickness="0,0,0,0"
                               Padding="0,0,0,0"
                               TextChanged="txtMKmoi_TextChanged" 
                               />
                </Border>

                <Border Background="#D8D9D9D9" CornerRadius="10" Padding="5" Margin="0,0,0,30">
                    <TextBox x:Name="txtMKxacnhan"
                               Width="395" Height="50"
                               HorizontalAlignment="Left"
                               Foreground="White"
                               Background="Transparent"
                               BorderBrush="DarkGray"
                               FontSize="20"
                               VerticalContentAlignment="Center"
                               TextAlignment="Left" 
                               CaretBrush="LightGray"
                               BorderThickness="0,0,0,0"
                               Padding="0,0,0,0"
                               TextChanged="txtMKxacnhan_TextChanged" 
                               />

                </Border>

                <Button  Width="200"
                   Height="60"
                   FontSize="20"
                   FontWeight="Bold"
                   Click="Btn_Xacnhan"
                   Margin="0,10,0,0" 
                   Foreground="White" Background="#FF820303">
                    <Button.Style>
                        <Style TargetType="Button" >
                            <Setter  Property="Background" Value="#5B71A8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF6C96FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate>
                            <Border    Width="200"
                                 Height="60"
                                 CornerRadius="10"
                                 Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                            Content="Xác nhận thay đổi"
                                            HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

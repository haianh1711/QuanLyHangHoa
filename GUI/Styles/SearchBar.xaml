<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="SearchTextBox" TargetType="{x:Type ContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Grid Height="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <!--TextBox-->
                        <Border Background="#F8D2A5" CornerRadius="30, 0, 0, 30" Margin="0, 0, 10, 0">
                            <Grid>
                                <TextBox x:Name="SearchTextBox"
                                         Background="Transparent" 
                                         Padding="35, 0, 0, 0"
                                         FontSize="22"
                                         BorderThickness="0"
                                         VerticalAlignment="Center"/>
                                <Label x:Name="WaterMakerLabel"
                                       Content="{TemplateBinding Tag}"
                                       Foreground="Gray"
                                       Margin="30, 0, 0, 0"
                                       FontSize="22"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False">
                                    <Label.Style>
                                        <Style TargetType="{x:Type Label}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                            <Setter Property="Visibility" Value="Hidden"/>
                                        </Style>
                                    </Label.Style>
                                </Label>
                            </Grid>
                        </Border>
                        
                        <!--Button-->
                        <Border Width="90" CornerRadius="0, 30, 30, 0 " Grid.Column="1" Background="#9D9999" Cursor="Hand">
                            <TextBlock FontFamily="Segoe MDL2 Assets" 
                                       Text="&#xE721;" 
                                       FontSize="25" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                        />
                        </Border>
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--TextBox-->
    <Style x:Key="SearchTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Padding" Value="35,0,0,0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid Margin="0, 0, 10, 0">

                        <!-- Background -->
                        <Border Background="#F8D2A5" CornerRadius="30, 0, 0, 30" />

                        <!-- Đây là nơi hiển thị nội dung TextBox -->
                        <TextBox x:Name="SearchTextBox"
                                 Background="Transparent" 
                                 Padding="35, 0, 0, 0"
                                 FontSize="20"
                                 BorderThickness="0"
                                 VerticalAlignment="Center" Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}"/>

                        <!-- Placeholder -->
                        <Label x:Name="WaterMakerLabel"
                                   Content="{TemplateBinding Tag}"
                                   Foreground="Gray"
                                   Margin="30, 0, 0, 0"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <Label.Style>
                                <Style TargetType="{x:Type Label}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </Style>
                            </Label.Style>
                        </Label>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!--Button-->
    <Style x:Key="SearchButton" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Width="90" CornerRadius="0, 30, 30, 0 " 
                            Grid.Column="1" Background="#9D9999" 
                            Cursor="Hand">
                        <TextBlock FontFamily="Segoe MDL2 Assets" 
                               Text="&#xE721;" 
                               FontSize="25" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="SimpleBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#A7BFFC"/>
        <Setter Property="BorderBrush" Value="#7090DD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="13.36"/>
    </Style>
    <Style x:Key="BorderWithHeaderStyle" TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid>
                        <!-- Header -->
                        <Border Background="#DFEBF8"
                                Height="auto"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Width="auto"
                                CornerRadius="4"
                                Panel.ZIndex="1"
                                Padding="3"
                                Margin="20, -12, 0, 0">
                            <TextBlock Text="{TemplateBinding Tag}" 
                                       Foreground="Black" 
                                       FontSize="14"
                                       HorizontalAlignment="Center"
                                       Padding="10, 0"/>               
                        </Border>

                        <!-- Nội dung -->
                        <Border Background="#CAD9FF" 
                                BorderBrush="#7090DD"
                                BorderThickness="1"
                                CornerRadius="13.36"
                                Padding="20">
                            <ContentPresenter />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BorderWithHeaderForCharStyle" TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid>
                        <!-- Header -->
                        <Border Background="#DFEBF8"
                        Height="auto"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Width="auto"
                        CornerRadius="4"
                        Panel.ZIndex="1"
                        Padding="3"
                        Margin="20, -12, 0, 0">
                            <TextBlock Text="{TemplateBinding Tag}" 
                               Foreground="Black" 
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Padding="10, 0"/>
                        </Border>

                        <!-- Nội dung -->
                        <Border Background="#A7BFFC" 
                        BorderBrush="#7090DD"
                        BorderThickness="1"
                        CornerRadius="13.36"
                        Padding="20">
                            <ContentPresenter />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>